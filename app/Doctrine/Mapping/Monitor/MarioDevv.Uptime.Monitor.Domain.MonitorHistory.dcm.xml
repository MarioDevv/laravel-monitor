<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="MarioDevv\Uptime\Monitor\Domain\MonitorHistory" table="history">

        <id name="surrogateId" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <embedded name="pingedAt" class="MarioDevv\Uptime\Monitor\Domain\MonitorHistoryPingedAt"
                  use-column-prefix="false"/>

        <embedded name="state" class="MarioDevv\Uptime\Monitor\Domain\MonitorHistoryState"
                  use-column-prefix="false"/>

        <field name="responseTime" type="float" precision="2"/>



    </entity>

</doctrine-mapping>
